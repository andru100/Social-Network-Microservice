FROM node:14.17.4-alpine as build 

ARG DOMAIN

ARG CHKAUTH_PORT

ARG POSTFILE_PORT

ARG POSTMSG_PORT

ARG SIGNIN_PORT

ARG SIGNUP_PORT

ARG STDGET_PORT

ARG UPDATEBIO_PORT

WORKDIR /app 

COPY ./package.json . 
COPY ./package-lock.json . 

RUN npm install 

COPY ./public ./public/ 
COPY ./src ./src/ 

RUN REACT_APP_BACKEND_ADDRESS=${DOMAIN} \
  REACT_APP_CHKAUTH_PORT=${CHKAUTH_PORT} \ 
  REACT_APP_POSTFILE_PORT=${POSTFILE_PORT} \ 
  REACT_APP_POSTMSG_PORT=${POSTMSG_PORT} \  
  REACT_APP_SIGNIN_PORT=${SIGNIN_PORT} \ 
  REACT_APP_SIGNUP_PORT=${SIGNUP_PORT} \ 
  REACT_APP_STDGET_PORT=${STDGET_PORT} \ 
  REACT_APP_UPDATEBIO_PORT=${UPDATEBIO_PORT} \ 
  npm run build 

FROM nginx:1.17-alpine 

COPY --from=build /app/build /usr/share/nginx/html 

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]